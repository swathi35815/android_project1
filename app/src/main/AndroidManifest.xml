<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_shop2"
        android:label="Fashion Shopping"
        android:roundIcon="@mipmap/logo_shop2"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerce"
        tools:targetApi="31">
        <activity
            android:name="com.ecommerce.DisplayProductDetails"
            android:exported="false" />
        <activity
            android:name="com.ecommerce.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ecommerce.DashboardActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name="com.ecommerce.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.ecommerce.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.ecommerce.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>