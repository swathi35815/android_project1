<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="530dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="95dp"
        android:background="#26FFFFFF"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle|end|beginning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewLoginPageLoginIcon"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="15dp"
            app:srcCompat="@drawable/icons8_login_67" />

        <EditText
            android:id="@+id/editTextLoginPageLoginEmail"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#4DFFFFFF"
            android:ems="10"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFEFE"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextLoginPageLoginPassword"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#4DFFFFFF"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/buttonLoginPageForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="Forgot Password?"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#FFFFFF" />

        <Button
            android:id="@+id/buttonLoginPageLogin"
            android:layout_width="255dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLoginPageSignUp"
                android:layout_width="171dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Don't have an account?"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonLoginPageSignUp"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:text="Sign up"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#864BED"
                android:textSize="17dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>