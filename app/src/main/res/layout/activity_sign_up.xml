<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.ecommerce.SignUpActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="70dp"
        android:background="#26FFFFFF"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle|end|beginning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageViewSignUpPageSignUpIcon"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:srcCompat="@drawable/logo_shop2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/imageViewSignUpPageUserNameIcon"
                android:layout_width="45dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                app:srcCompat="@drawable/icons8_user_48" />

            <EditText
                android:id="@+id/editTextSignUpPageFullName"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:width="0dp"
                android:background="#4DFFFFFF"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFEFE"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/imageViewLSignUpPageEmailIcon"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                app:srcCompat="@android:drawable/ic_dialog_email" />

            <EditText
                android:id="@+id/editTextSignUpPageSignUpEmail"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:width="0dp"
                android:background="#4DFFFFFF"
                android:ems="10"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFEFE"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/imageViewSignUpPagePhoneNumIcon"
                android:layout_width="45dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                app:srcCompat="@android:drawable/stat_sys_speakerphone" />

            <EditText
                android:id="@+id/editTextSignUpPagePhoneNum"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:width="0dp"
                android:background="#4DFFFFFF"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFEFE"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/imageViewSignUpPagePasswordIcon"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                app:srcCompat="@android:drawable/ic_lock_idle_lock" />

            <EditText
                android:id="@+id/editTextSignUpPageSignUpPassword"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="#4DFFFFFF"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="17sp" />
        </LinearLayout>


        <Button
            android:id="@+id/buttonSignUpPageSignUp"
            android:layout_width="255dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:text="SIGN UP"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:backgroundTint="#CC675543"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSignUpPageSignIn"
                android:layout_width="171dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Already have an account?"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonSignUpPageSignIn"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:text="Sign In"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#864BED"
                android:textSize="17sp" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
